@model FileUploadProject.Models.FileUpload

@{
    ViewBag.Title = "File Details";
}

<h2>File Details</h2>

<div>
    <h4>FileUpload</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FileName)</dt>
        <dd>@Html.DisplayFor(model => model.FileName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt>@Html.DisplayNameFor(model => model.UploadDate)</dt>
        <dd>@Html.DisplayFor(model => model.UploadDate)</dd>

        <dt>@Html.DisplayNameFor(model => model.UploadedBy)</dt>
        <dd>@Html.DisplayFor(model => model.UploadedBy)</dd>

        <dt>Download File</dt>
        <dd>
            <a href="@Url.Content(Model.FilePath)" target="_blank">Download</a>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FileId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
